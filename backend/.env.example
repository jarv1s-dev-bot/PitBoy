# Server
PORT=8787

# Provider: openclaw | openai | echo
CHAT_PROVIDER=echo

# Optional safety key required from watch requests
PITBOY_API_KEY=

# -------- OpenClaw provider --------
# Point this at an endpoint that can accept a chat payload and return text.
OPENCLAW_CHAT_URL=
OPENCLAW_BEARER_TOKEN=

# -------- OpenAI chat --------
OPENAI_API_KEY=
OPENAI_MODEL=gpt-4o-mini

# -------- OpenAI TTS --------
# Currently only openai is implemented for TTS_PROVIDER
TTS_PROVIDER=openai
OPENAI_TTS_MODEL=gpt-4o-mini-tts
OPENAI_TTS_VOICE=alloy
OPENAI_TTS_FORMAT=mp3

# System instruction for replies
SYSTEM_PROMPT=You are Jarvis, concise and practical.
